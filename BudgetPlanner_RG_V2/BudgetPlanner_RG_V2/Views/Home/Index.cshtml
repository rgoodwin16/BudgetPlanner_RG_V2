@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1.0">
    <title>BudgetPlanner - a WebApi powered, Angular application by Ray Goodwin</title>


    <!-- Stylesheets -->
    <!-- Web fonts -->
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400italic,600,700%7COpen+Sans:300,400,400italic,600,700">
    
    
    @Styles.Render("~/Content/css")
    <link href="~/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Theme_Template/css/animate.css" rel="stylesheet" />
    <link href="~/Theme_Template/css/color_admin.css" rel="stylesheet" />
    <link href="~/Theme_Template/css/color_admin_responsive.css" rel="stylesheet" />
    <link href="~/Theme_Template/css/color_admin_default.css" rel="stylesheet" />
    @*<link href="~/Theme_Template/css/oneui.css" rel="stylesheet" />*@
    @*<link href="~/Theme_Template/css/app.css" rel="stylesheet" />*@




</head>
<body>

    <div ng-app="budget_planner">

        <div ng-controller="layoutCtrl as layout">
            
            <div ng-hide="layout.$state.includes('login') || layout.$state.includes('household.create') || layout.$state.includes('household.join')">
                <!-- begin #sidebar -->
                <div id="sidebar" class="sidebar">
                    <!-- begin sidebar scrollbar -->
                    <div data-scrollbar="true" data-height="100%">
                        <!-- begin sidebar user -->
                        <ul class="nav">
                            <li class="nav-profile">
                                <div class="image">
                                    <img src="~/Theme_Template/img/user_ava.png" alt="" />
                                </div>
                                <div class="info" ng-controller="houseCtrl as house">
                                    <small>Welcome</small>
                                    {{house.user.DisplayName}}

                                </div>
                            </li>
                        </ul>
                        <!-- end sidebar user -->
                        <!-- begin sidebar nav -->
                        <ul class="nav" ng-controller="houseCtrl as house">

                            <li class="has-sub active">
                                <a ui-sref="dashboard">
                                    <i class="fa fa-laptop"></i>
                                    <span>Dashboard</span>
                                </a>
                            </li>
                            <li class="has-sub">
                                <a class="auto" ui-sref="household.details">
                                    
                                    <i class="fa fa-home"></i>
                                    <span>HouseHold</span>
                                </a>
                            </li>
                            <li class="has-sub">
                                <a ui-sref="accounts.list">
                                    <i class="fa fa-university"></i>
                                    <span>Accounts</span>
                                </a>
                            </li>
                            <li class="has-sub">
                                <a ui-sref="budget.list">
                                    <i class="fa fa-pie-chart"></i>
                                    <span>Budget</span>
                                </a>
                            </li>

                        </ul>
                        <!-- end sidebar nav -->
                    </div>
                    <!-- end sidebar scrollbar -->
                </div>
                <div class="sidebar-bg"></div>
                <!-- end #sidebar -->
            </div>

            <div ui-view></div><!-- main ui-view -->

        </div><!-- /layoutCtrl -->

    </div><!-- / ng-app -->


    <!-- begin angular -->
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-ui-router.min.js"></script>
    <script src="~/Scripts/angular-local-storage.min.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap.min.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>


    <!-- begin app | services -->
    <script src="~/App/app.js"></script>
    <script src="~/App/services/auth/authSvc.js"></script>
    <script src="~/App/services/auth/authInterceptorSvc.js"></script>

    <script src="~/App/services/house/houseSvc.js"></script><!-- household -->
    <script src="~/App/services/house/houseAccountSvc.js"></script><!-- account -->
    <script src="~/App/services/house/transactionSvc.js"></script><!-- transactions -->
    <script src="~/App/services/house/budgetItemSvc.js"></script><!-- budget -->
    <script src="~/App/services/house/categorySvc.js"></script><!-- category -->
    
    <!-- begin controllers -->

    <!-- Core -->
    <script src="~/app/controllers/loginCtrl.js"></script><!-- login -->
    <script src="~/App/controllers/registerCtrl.js"></script><!-- register -->
    <script src="~/App/controllers/layoutCtrl.js"></script><!-- layout -->
    <script src="~/app/controllers/dashboardCtrl.js"></script><!-- dashboard -->
    <script src="~/App/controllers/modalCtrl.js"></script><!-- modal -->

    <!-- HouseHold -->
    <script src="~/App/controllers/house/houseCtrl.js"></script><!-- house -->
    <script src="~/App/controllers/house/houseDetailsCtrl.js"></script><!-- house.details -->
    <script src="~/App/controllers/house/houseCreateCtrl.js"></script><!-- house.create -->
    <script src="~/App/controllers/house/houseJoinCtrl.js"></script><!-- house.join -->

    <!-- Accounts -->
    <script src="~/App/controllers/account/accountCtrl.js"></script><!-- account -->
    <script src="~/App/controllers/account/accountListCtrl.js"></script><!-- account.list -->
    <script src="~/App/controllers/account/accountDetailsCtrl.js"></script><!-- account.details -->
    <script src="~/App/controllers/account/accountTransactionsCtrl.js"></script><!-- account.transactions -->

    <!-- Budget -->
    <script src="~/App/controllers/budget/budgetCtrl.js"></script><!-- budget -->
    <script src="~/App/controllers/budget/budgetListCtrl.js"></script><!-- budget.list -->

    <!-- Categories -->
    <script src="~/App/controllers/category/transactionCategoryCtrl.js"></script><!-- transactions.category -->
    <script src="~/App/controllers/category/budgetCategoryCtrl.js"></script><!-- budget.category -->




</body>
</html>


